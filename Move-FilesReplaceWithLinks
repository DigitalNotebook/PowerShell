
function Move-FilesReplaceWithLinks {
  param
  (
   
    [String[]]
    [Parameter(Mandatory)]
    $SourceFolder,

    [String]
    [Parameter(Mandatory)]
    $TargetFolder,
       
    [Double]
    [Parameter(Mandatory)]
    $LastModified
  )
  
  

    foreach ($SourceFile in Get-ChildItem -Path $SourceFolder | Where-Object  {(Get-Date).AddDays(-$LastModified) -le $_.LastWriteTime})
    { 
       
      try
      {
        Move-Item -Path $sourceFile.FullName -Destination  (Join-Path -Path $TargetFolder -ChildPath ($sourceFile.Name)) -ErrorAction Stop  
        New-Item -ItemType SymbolicLink -Path $sourceFile.FullName  -Target (Join-Path -Path $TargetFolder -ChildPath ($sourceFile.Name))      
      }
      catch
      {
        Write-Warning -Message "Cannot create file $sourceFile.name, file already exists!"
      }    
             

     }

 }    
  
  
  
  
  Move-FilesReplaceWithLinks -SourceFolder C:\Powershell\TestFolder1 -TargetFolder C:\Powershell\TestFolder2 -LastModified 6
